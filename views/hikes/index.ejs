<html>
    <head>
        <meta charset="utf-8">
        <title>Oregon Hikes</title>
        <link rel="stylesheet" href="https://unpkg.com/mustard-ui@latest/dist/css/mustard-ui.min.css">
        <link rel="stylesheet" href="./style.css">
        <link href='https://fonts.googleapis.com/css?family=Aclonica' rel='stylesheet'>
    </head>
    <body>
        <nav>
            <h2>Oregon Hikes</h2>
        </nav>
        <div class="div1">
            <button class="button-primary-outlined">
                <span class="tooltip">
                <a href="/logout">Logout</a>
                <span class="tooltip-text">You are logged in as: <%=username%>
                </span>
            </button>
            <button class="button-primary-outlined">
                <a href="/hike/new">Add New Hike</a>
            </button>
        </div>
        <div class="row">
            <div class="row row-md-4">
                <%for (let i = 0; i < Hike.length; i++) {%>
                    <div class="card">
                        <h3 class="card-title"><%=Hike[i].title%></h3>
                        <img src="<%=Hike[i].img%>">
                        <ul class="card-actions">
                            <li>
                                <a href="/hike/<%=Hike[i].id%>"><%=Hike[i].title%></a>
                            </li>
                        </ul>
                    </div>
                <%}%>
            </div>
        </div>
    </body>
</html>

